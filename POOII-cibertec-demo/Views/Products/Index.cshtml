@model IEnumerable<POOII_cibertec_demo.Models.Product>

@{
    ViewData["Title"] = "Listado de Productos";
    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 5;
    int totalRegistros = ViewBag.TotalRegistros ?? 0;
    int totalPaginas = ViewBag.TotalPaginas ?? 0;
}

<h2>Productos</h2>

<!-- Botón crear -->
<p>
    <a class="btn btn-primary" href="/Products/Create">Crear nuevo</a>
</p>

<!-- Formulario de filtros -->
<form id="filtersForm" method="get" action="@Url.Action("Index", "Products")" class="mb-3">
    <div class="row g-2">
        <div class="col-md-2">
            <label class="form-label">Nombre</label>
            <input type="text" name="nombre" value="@ViewBag.Nombre" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Precio mínimo</label>
            <input type="number" step="0.01" min="0" name="precioMin" value="@ViewBag.PrecioMin" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Cantidad mínima</label>
            <input type="number" min="0" name="cantidadMin" value="@ViewBag.CantidadMin" class="form-control" />
        </div>

        <div class="col-12 mt-2">
            <button type="submit" class="btn btn-primary me-2">Filtrar</button>
            <button type="button" id="btnClear" class="btn btn-outline-secondary">Limpiar</button>

            <label class="ms-3 align-middle">Items por página:</label>
            <input type="number" name="pageSize" min="1" value="@pageSize" style="width:80px;" class="form-control d-inline-block ms-2" />
        </div>
    </div>
</form>

<!-- MENSAJE si no hay resultados -->
@if (totalRegistros == 0)
{
    <div class="alert alert-info">No se encontraron productos con los filtros aplicados.</div>
}

<!-- TABLA -->
@if (Model != null && Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Fecha Registro</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.nombre</td>
                    <td>@item.precio.ToString("0.00")</td>
                    <td>@item.cantidad</td>
                    <td>@item.fechaRegistro.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="me-1" href="/Products/Edit/@item.Id">Editar</a>
                        <a class="me-1" href="/Products/Details/@item.Id">Detalles</a>
                        <a href="/Products/Delete/@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}                

<!-- PAGINACIÓN (ocultar si no hay resultados) -->
@if (totalRegistros > 0)
{
    <nav aria-label="Paginación">
        <ul class="pagination">
            @* Anterior *@
            @if (page > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new {
                        nombre = ViewBag.Nombre,
                        precioMin = ViewBag.PrecioMin,
                        cantidadMin = ViewBag.CantidadMin,
                        isCompleted = ViewBag.IsCompleted,
                        page = page - 1,
                        pageSize = pageSize
                    })">Anterior</a>
                </li>
            }

            <li class="page-item disabled"><span class="page-link">Página @(page) de @totalPaginas</span></li>

            @if (page < totalPaginas)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new {
                        nombre = ViewBag.Nombre,
                        precioMin = ViewBag.PrecioMin,
                        cantidadMin = ViewBag.CantidadMin,
                        isCompleted = ViewBag.IsCompleted,
                        page = page + 1,
                        pageSize = pageSize
                    })">Siguiente</a>
                </li>
            }
        </ul>
    </nav>
}
@section Scripts {
    <script>
        (function(){
            var btnClear = document.getElementById('btnClear');
            var form = document.getElementById('filtersForm');

            btnClear.addEventListener('click', function(){
                if(!form) return;

                // Limpiar todos los inputs y selects dentro del form
                var elements = form.querySelectorAll('input, select');
                elements.forEach(function(el){
                    if (el.tagName.toLowerCase() === 'select') {
                        el.selectedIndex = 0;
                    } else {
                        el.value = '';
                    }
                });

                // Establecer pageSize por defecto (5)
                var ps = form.querySelector('input[name="pageSize"]');
                if(ps) ps.value = 5;

                // Enviar formulario vacío (GET) para recargar la página sin filtros
                form.submit();
            });
        })();
    </script>
}
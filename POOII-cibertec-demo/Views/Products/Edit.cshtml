@model POOII_cibertec_demo.Models.ViewModels.ProductEditViewModel
<h2>Editar Producto</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label>Nombre</label>
        <input asp-for="nombre" class="form-control" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Precio</label>
        <input asp-for="precio" type="number" step="0.01" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Cantidad</label>
        <input asp-for="cantidad" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Comprado</label>
        <input asp-for="isCompleted" type="checkbox" />
    </div>
    <div class="form-group mb-3">
        <label>Imagen</label>
        <input type="file" name="imagen" class="form-control" />

        @if (!string.IsNullOrEmpty(Model.imagenPath))
        {
            <img src="~/images/@Model.imagenPath" width="100" class="mt-2" />
        }
    </div>
    <button class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
